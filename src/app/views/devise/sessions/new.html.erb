<!-- Sign In Page Form with Boostrap Styling B) -->
<section class="form-auth text-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
        <!-- <img class="mb-4" src="/docs/4.3/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72"> -->
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="inputEmail" class="sr-only">Email address</label>
    
        <%= render "devise/shared/error_messages", resource: resource %>
    
        <%= f.email_field :email, autofocus: true, class: "form-control", id:"inputEmail", class:"form-control", 
        placeholder:"Email address", required:"", autofocus:"", autocomplete:"off" %>
        <label for="inputPassword" class="sr-only">Password</label>
        <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", class: "form-control", id: "inputPassword", required:"", autocomplete:"off" %>
        <div class="checkbox mb-3">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        <br>
        <% end %>
      <%= render "devise/shared/links" %>
    </section>
    




